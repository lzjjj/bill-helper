/* pages/mine/mine.wxss */

page {
  width: 100%;
  min-height: 100%;
  display: flex;
  flex-flow: row wrap;
}

.Total {
  display: flex;
  min-height: 100%;
  flex-flow: row wrap;
}

.search-nav {
  align-self: flex-start;
  margin: 1rem 10%;
  width: 70%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 2rem;
  line-height: 2rem;
  border-radius: 0.2rem;
  border: 1px solid #f4ea2a;
  font-size: 0.8rem;
  text-align: center;
  color: #000;
}

.search-nav-left, .search-nav-right {
  width: 50%;
  height: 100%;
}

.active {
  background-color: #f4ea2a;
  color: #fff;
}

.keyboard-right{
  display: flex;
  flex-direction: column;
  width: 30%

}

.keyboard-right-display{
  width: 100%;
  height: 2.18rem;
  border: none;
  border-top:1px solid gainsboro;
   
}

.for-handle{
  height: 4.36rem;
  line-height: 4.36rem;
  background-color: #f4ea2a;
}