/* pages/mine/mine.wxss */

page {
  width: 100%;
  min-height: 100%;
  display: flex;
  flex-flow: row wrap;
  background-color: gainsboro;
}

.Total {
  display: flex;
  min-height: 100%;
  flex-flow: row wrap;
}

.search-nav {
  margin: 1rem auto;
  width: 70%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 2rem;
  line-height: 2rem;
  border-radius: 0.2rem;
  border: 1px solid #f4ea2a;
  font-size: 0.8rem;
  text-align: center;
  color: #000;
}

.search-nav-left, .search-nav-right {
  width: 50%;
  height: 100%;
}

.active {
  background-color: #f4ea2a;
  color: #fff;
}

.keyboard-right {
  display: flex;
  flex-direction: column;
  width: 30%;
}

.keyboard-right-display {
  width: 100%;
  height: 25.5%;
  border: none;
  border-top: 1px solid gainsboro;
}

.for-handle {
  height: 51%;
  padding-top: 30%;
  background-color: #f4ea2a;
}

.remark {
  width: 90%;
  border: 1px solid gainsboro;
  border-bottom: none;
  height: 2.5rem;
}

.type-item {
  display: flex;
  font-size: 0.9rem;
  align-items: center;
  justify-content: space-between;
}

.date {
  height: 2.5rem;
  line-height: 2.5rem;
  width: 30%;
  text-align: center;
  font-size: 0.8rem;
}

.bill-type-image {
  padding: 5px 5px 0 10px;
  width: 40px;
  height: 40px;
}

.remark-content {
  display: flex;
  width: 69%;
  border: 1px solid gainsboro;
  border-bottom: none;
  align-items: center;
}

.remark-image {
  width: 15px;
  height: 15px;
  padding-right: 5%;
  padding-left: 5%;
}

.bill-type-content {
  display: flex;
  flex-wrap: wrap;
}

.bill-type-item {
  display: flex;
  flex-direction: column;
  width: 25%;
  justify-content: center;
  align-items: center;
  font-size: 0.6rem;
  margin-top: 1rem;
}

.type-item-image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.hidden {
  width: 80px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
